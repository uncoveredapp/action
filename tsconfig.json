{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": ["*", "node_modules/*", "src/*"]
    },
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "include": ["src/**/*"]
}
